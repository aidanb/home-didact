<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.home_didact.activities.NewLearnerActivity"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_new_learner"
            android:textSize="10pt">
            </TextView>

        <EditText
            android:id="@+id/NewLearnerName"
            android:layout_height="wrap_content"
            android:hint="@string/new_learner_enter_name"
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
            </EditText>

        <EditText
            android:id="@+id/NewLearnerAddress"
            android:layout_height="wrap_content"
            android:hint="@string/new_learner_enter_address"
            android:inputType="textPostalAddress"
            android:layout_width="fill_parent">
            </EditText>

        <EditText
            android:id="@+id/NewLearnerPhoneNumber"
            android:layout_height="wrap_content"
            android:hint="@string/new_learner_enter_phone_number"
            android:inputType="phone"
            android:layout_width="fill_parent">
        </EditText>


    </LinearLayout>


</ScrollView>
