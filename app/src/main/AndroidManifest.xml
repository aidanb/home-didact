<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.home_didact" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.home_didact.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.home_didact.activities.NewLearnerActivity"
            android:label="@string/title_activity_new_learner"
            android:parentActivityName="com.home_didact.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.home_didact.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.home_didact.activities.ListLearners"
            android:label="@string/title_activity_list_learners"
            android:parentActivityName="com.home_didact.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.home_didact.activities.MainActivity" />
        </activity>
    </application>

</manifest>
